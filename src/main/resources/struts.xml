<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">	

<struts>
    <!-- devMode is helpful when you want some extra logs for debugging -->
    <constant name="struts.devMode" value="false" />
    <!-- Global message resource; 
    	 Otherwise you will have seperate message resource for each Action 
    -->
    <constant name="struts.custom.i18n.resources" value="messages" /> 
    <!-- 
    	This is important if you are planning to have slashes in Action URLs
    	e.g. In this demo, employee is deleted using URL /delete/10
    	This this is set to false; then struts will try to find mapping for 
    	URL "/10" instaed of "/delete/10"
     -->
    <constant name="struts.enable.SlashesInActionNames" value="true"/>
    <constant name="struts.action.extension" value=""/>
    <constant name="struts.action.excludePattern" value=".*jsp,.*htm,.*html,.*/css/.*,.*/images/.*,.*/img/.*,.*/font.*,.*/js/.*"/>
    <!-- Normal Action mappings are defined here -->
    <package name="ajax" namespace="" extends="json-default">
        <action name="sendRequest" class="com.howtodoinjava.controller.MapAction" method="sendRequest">
            <result type="json">
                <param name="excludeNullProperties">true</param>
                <param name="noCache">true</param>
            </result>
        </action>
    </package>
	<package name="default" namespace="" extends="struts-default">
	    <!-- Two things to Notice: 
	    	 1) class is set to 'editEmployeeAction' which is bean defined by Spring context
	    	 2) We have given the method to be called here as well;
	   	-->
		<action name="list" class="com.howtodoinjava.controller.MapAction" method="showMap">
            <result>/view/mainPage.jsp</result>
        </action>
        <action name="registerPanel" class="com.howtodoinjava.controller.EditUserAction">
            <result>/view/registerPanel.jsp</result>
        </action>
        <action name="registerUser" class="com.howtodoinjava.controller.EditUserAction" method="registerUser">
            <result>/view/registerPanel.jsp</result>
        </action>
        <action name="user/search" class="com.howtodoinjava.controller.EditEmployeeAction" method="search">
            <result>/view/examPage.jsp</result>
        </action>
        <action name="add" class="com.howtodoinjava.controller.EditEmployeeAction" method="addEmployee">
            <result type="redirect">/list</result>
        </action>
        <action name="delete/*" class="com.howtodoinjava.controller.EditEmployeeAction" method="deleteEmployee">
            <param name="employee.id">{1}</param>
            <result type="redirect">/list</result>
		</action>
        <action name="user/welcome">
            <result>/view/examPage.jsp</result>
        </action>
        <action name="user/addRequest" class="com.howtodoinjava.controller.EditEmployeeAction" method="addRequest">
            <result>/view/requestResult.jsp</result>
        </action>
        <action name="admin/welcome" class="com.howtodoinjava.controller.EditEmployeeAction" method="showPendings">
            <result>/view/monitorWord.jsp</result>
        </action>
        <action name="admin/rejectWord" class="com.howtodoinjava.controller.EditEmployeeAction" method="rejectWord">
            <result type="redirect">/admin/welcome</result>
        </action>
        <action name="admin/translateWord" class="com.howtodoinjava.controller.EditEmployeeAction" method="translateWord">
            <result type="redirect">/admin/welcome</result>
        </action>
        <action name="login">
            <result>/view/login.jsp</result>
        </action>
        <action name="landing">
            <result>/view/landing.jsp</result>
        </action>
        <action name="signout">
            <result>/view/login.jsp</result>
        </action>

        <action name="*">
            <result type="redirect">/landing</result>
        </action>
	</package>
	
</struts>